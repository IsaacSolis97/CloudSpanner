<%- include("../template/header", {title: "Cloud Spanner" }); %>

<body>
    <%- include("../template/navbar"); %>
    <div class="div-container">
        <div class="d-flex justify-content-between align-items-center mt-4 border-bottom">
            <h3>Pasajeros</h3>
        </div>
    
        <table class="table table-striped my-5">
            <thead>
                <tr class="text-center">
                    <th>Identificador</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha</th>
                    <th colspan="1">Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(data){ %>
                    <tr class="text-center">
                        <td>
                            <%= data.passid %>
                        </td>
                        <td>
                            <%= data.passname %>
                        </td>
                        <td>
                            <%= data.passemail %>
                        </td>
                        <td>
                            <%= data.passdob %>
                        </td>
                        <td class=" " colspan="1">
                            <a class="btn btn-primary align-baseline" data-original-title="Editar"
                                href="/passenger/<%= data.passid %>"><i class="far fa-edit"></i></a>
                            <a class="btn btn-danger align-baseline" data-original-title="Eliminar"
                                href="/passenger/delete/<%= data.passid %>"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>