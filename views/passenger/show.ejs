<%- include("../template/header", {title: "Cloud Spanner"}); %>
<body>
    <%- include("../template/navbar"); %>
    <div class="div-container">
        <div class="d-flex justify-content-between align-items-center mt-4 border-bottom">
            <h3>Editar Pasajero</h3>
        </div>
        <div class="container-fluid mt-5" style="width: 60%;">
            <form action="/passenger/<%= data.passid %>" method="post">
                <div class="my-3">
                    <label for="passname" class="form-label">Nombre</label>
                    <input type="text" name="passname" value="<%= data.passname %>" class="form-control" placeholder="Nombre" required>
                </div>
                <div class="my-3">
                    <label for="passemail" class="form-label">Correo electrónico</label>
                    <input type="text" name="passemail" value="<%= data.passemail %>" class="form-control" placeholder="Correo electrónico" required>
                </div>
                <div class="my-3">
                    <label for="passdob" class="form-label">Fecha actual: <%= data.passdob %></label>
                    <input type="datetime-local" name="passdob" value="<%= data.passdob.replace(' ' , 'T') %>" class="form-control">
                </div>
                <div class="btn-toolbar my-4 justify-content-end">
                    <button type="submit" class="btn btn-primary mx-2">Guardar <i class="far fa-save"></i></button>
                    <a class="btn btn-danger align-baseline" href="/passenger/delete/<%= data.passid %>">Eliminar <i class="far fa-trash-alt"></i></a>
                </div>
            </form>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>