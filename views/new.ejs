<%- include("./template/header", {title: ""}); %>
<body>
    <%- include("./template/navbar"); %>
    <div class="div-container">
        <div class="d-flex justify-content-between align-items-center mt-4 border-bottom">
            <h3>Nueva Reservacion</h3>
        </div>
        <div class="container-fluid" style="width: 80%;">
            <form action="/new" method="post">
                <div class="row mt-5 mb-4">
                    <h5>Información del pasajero</h5>
                    <div class="col col-md-12">
                        <label for="passname" class="form-label">Nombre</label>
                        <input type="text" name="passname" class="form-control" placeholder="Nombres y apellidos">
                    </div>
                    <div class="col col-md-6 my-3">
                        <label for="passemail" class="form-label">Email</label>
                        <input type="text" name="passemail" class="form-control" placeholder="Correo electrónico">
                    </div>
                    <div class="col col-md-6 my-3">
                        <label for="passdob" class="form-label">Fecha</label>
                        <input type="date" name="passdob" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <h5>Información del vuelo</h5>
                    <div class="col col-md-6">
                        <label for="flightsource" class="form-label">Origen</label>
                        <input type="text" name="flightsource" class="form-control" placeholder="Lugar de origen">
                    </div>
                    <div class="col col-md-6">
                        <label for="flightdest" class="form-label">Destino</label>
                        <input type="text" name="flightdest" class="form-control" placeholder="Lugar de destino">
                    </div>
                    <div class="col col-md-6 my-3">
                        <label for="flightdate" class="form-label">Fecha</label>
                        <input type="date" name="flightdate" class="form-control">
                    </div>
                    <div class="col col-md-3 my-3">
                        <label for="flightseat" class="form-label">Asiento</label>
                        <input type="number" name="flightseat" placeholder="0" class="form-control">
                    </div>
                    <div class="col col-md-3 my-3">
                        <label for="flightcost" class="form-label">Costo</label>
                        <input type="number" name="flightcost" placeholder="0.00" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" class="form-control" >
                    </div>
                </div>
                <div class="btn-toolbar my-4 justify-content-end">
                    <button type="submit" class="btn btn-primary mx-2">Guardar <i class="far fa-save"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>